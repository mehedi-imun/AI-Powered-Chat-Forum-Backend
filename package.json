{
  "name": "chat-forum-backend",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "seed:admin": "ts-node src/scripts/seed-admin.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs backend -f --tail=100",
    "docker:dev:restart": "docker-compose -f docker-compose.dev.yml restart backend",
    "docker:prod": "docker-compose up -d",
    "docker:prod:down": "docker-compose down",
    "docker:prod:logs": "docker-compose logs backend -f --tail=100",
    "docker:prod:build": "docker-compose up -d --build",
    "docker:monitoring": "docker-compose --profile monitoring up -d",
    "logs:clear": "rm -rf logs/*.log",
    "logs:view": "docker-compose -f docker-compose.dev.yml logs backend -f --tail=100",
    "logs:errors": "docker-compose -f docker-compose.dev.yml logs backend -f | grep -E '(ERROR|error|Error|‚ùå)'",
    "logs:all": "docker-compose -f docker-compose.dev.yml logs -f --tail=50",
    "logs:backend": "docker-compose -f docker-compose.dev.yml logs backend -f",
    "logs:mongodb": "docker-compose -f docker-compose.dev.yml logs mongodb --tail=50",
    "logs:redis": "docker-compose -f docker-compose.dev.yml logs redis --tail=50",
    "logs:rabbitmq": "docker-compose -f docker-compose.dev.yml logs rabbitmq --tail=50",
    "logs:size": "du -h logs/* 2>/dev/null || echo 'üìù No log files (Development mode - logs in Docker only)'",
    "logs:help": "echo '\nüìã Available Log Commands:\n  npm run logs:view      - Backend logs (live)\n  npm run logs:errors    - Filter errors only\n  npm run logs:all       - All services logs\n  npm run logs:backend   - Backend only (live)\n  npm run logs:mongodb   - MongoDB logs\n  npm run logs:redis     - Redis logs\n  npm run logs:rabbitmq  - RabbitMQ logs\n  npm run logs:size      - Check log files size\n  npm run logs:clear     - Clear log files\n'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "amqplib": "^0.10.4",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-prom-bundle": "^8.0.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "nanoid": "^5.1.6",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.9",
    "openai": "^6.7.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/amqplib": "^0.10.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.2",
    "@types/nodemailer": "^7.0.2",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
